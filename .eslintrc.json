{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "parser": "babel-eslint"
    },
    "extends": [
        "airbnb-base",
        "plugin:vue/recommended"
    ],
    "rules": {
        "quotes": 0,
        "linebreak-style": 0,
        "indent": 0,
        "semi": 0,
        "import/prefer-default-export": 0,
        "prefer-template": 0,
        "max-len": 0,
        "vue/html-indent": 4,
        "no-array-constructor": 0,
        "quote-props": 0,
        "no-plusplus": 0,
        "no-restricted-globals": 0,
        "no-underscore-dangle": 0,
        // ignored rules for eslint in circleCI
        "no-param-reassign": 0,
        "prefer-destructuring": 0,
        "space-before-function-paren": 0,
        "consistent-return": 0,
        "no-useless-return": 0,
        "vue/no-unused-components": 0,
        "no-multi-assign": 0,
        "vue/use-v-on-exact": 0,
        "no-unused-vars": 0,
        "vue/return-in-computed-property": 0,
        "no-shadow": 0,
        "array-callback-return": 0,
        "vue/no-use-v-if-with-v-for": 0,
        "import/no-named-as-default-member": 0,
        "no-return-assign": 0,
        "no-lonely-if": 0,
        "camelcase": [ 2, {
            "properties": "always",
            "allow" : ["EA_dyntpclick", "EA_tpclickposition", "EA_tpclickproduct", "EA_dyntpview", "EA_tpviewprd", "bid_amount", "first_name", "last_name"]
        }]
    },
    "globals": {
        "getDateFromString": true,
        "screen": true,
        "abtestarr": true,
        "_errs": true,
        "confirmEmail": true,
        "validateBid": true,
        "showBidConfirm": true,
        "auctionDetail": true,
        "currentUser": true,
        "showOrHidePhoneNumber": true,
        "ga": true,
        "userId": true,
        "getWidth": true,
        "ucFirst": true,
        "urls": true,
        "leErrs": true,
        "debugMsg": true,
        "getParameterByName": true,
        "Cookies": true,
        "$": true,
        "FB": true,
        "dataLayer": true,
        "bindPopUpStatus": true,
        "showModal": true,
        "errorModal": true,
        "getCookie": true,
        "setCookie": true,
        "eraseCookie": true,
        "step1Passed": true,
        "step1Error": true,
        "step2Error": true,
        "step2Passed": true,
        "EA_dyntpclick": true,
        "EA_tpclickposition": true,
        "EA_tpclickproduct": true,
        "EA_dyntpview": true,
        "EA_tpviewprd": true,
        "hitCallbackWithTimeout": true,
        "__BUILD__": true
    }
}
