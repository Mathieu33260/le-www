    <div class="container">
        <landingpage-solidaire
        {% if user %}
            :user-is-logged="true"
        {% endif %}
        ></landingpage-solidaire>
        <aside id="comment-ca-marche">
            <h2>Comment remporter ce lot exceptionnel ?</h2>
            <div class="row">
                <div class="media col-xs-12 col-sm-4" id="step1">
