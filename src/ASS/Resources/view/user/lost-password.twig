{% extends 'layout/html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}
{% block moremeta %}
    <meta name="robots" content="noindex">
{% endblock %}

{% block main_content %}
    <h1>Mot de passe oublié</h1>
    <div class="row">
        <p class="col-xs-10 col-xs-offset-1">Pour recevoir votre nouveau mot de passe, entrez votre adresse email. Vous allez recevoir un lien pour réinitialiser votre mot de passe.</p>
        <form role="form" method="post" class="form-horizontal col-xs-10 col-xs-offset-1">
            {% if message is defined %}
                <div class="alert alert-success" role="alert">{{ message|raw }}</div>
            {% endif %}
            {% if error is defined %}
            <div class="alert alert-danger" role="alert">{{ error|raw }}</div>
            {% endif %}
                <div class="form-group">
                    <label for="email" class="control-label col-sm-1">E-mail</label>
                    <div class="col-sm-11">
                        <input type="email" class="form-control" id="email" name="email" placeholder="E-mail" value="{{ email|default('') }}" required="" title="email" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Envoyer</button>
                    </div>
                </div>
        </form>
    </div>
{% endblock %}
