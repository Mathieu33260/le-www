{% extends 'layout/html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block main_content %}
    <h3 class="blue-bg">Mot de passe oublié</h3>
    {% if noForm == false %}
        <p>Choisissez votre nouveau mot de passe.</p>
        <div class="login-form">
            <form role="form" method="post" class="form-horizontal">
                <input type="hidden" name="code" value="{{ code }}" />
                {% if error %}
                    <div class="bg-danger text-danger">{{ error|raw }}</div>
                    <script>ga('send', 'event', 'Form', 'Submit_invalid', 'Password_reset', 0);</script>
                {% endif %}
                {% if message %}
                    <div class="bg-success text-success">{{ message|raw }}</div>
                    <script>ga('send', 'event', 'Form', 'Submit', 'Password_reset', 0);</script>
                {% else %}
                    <div class="form-group">
                        <label for="password_new" class="col-sm-3 control-label">Nouveau mot de passe</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" id="password_new" name="password" placeholder="Nouveau mot de passe" required="" title="mot de passe" />
                            <span>Votre mot de passe doit contenir au moins 6 caractères.</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password_check" class="col-sm-3 control-label">Vérification du mot de passe</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" id="password_check" name="password_check" placeholder="Vérification du mot de passe" required="" title="mot de passe de vérification" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <button type="submit" class="btn btn-default">Envoyer</button>
                        </div>
                    </div>
                {% endif %}
            </form>
        </div>
    {% else %}
        <div class="bg-danger text-danger">Ce lien n'est plus valide, pour en recevoir un nouveau cliquez <a href="{{path('user.lostpassword')}}">ici</a></div>
        <script>ga('send', 'event', 'Form', 'Submit', 'Password_reset', 0);</script>
    {% endif %}
{% endblock %}